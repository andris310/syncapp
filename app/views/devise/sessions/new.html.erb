<div class="container">
	<div id="login">
		<h2>Sign in</h2>
			<div class="sign-in">
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<%= devise_error_messages! %>

				  <div class="controls">
				  <%= f.email_field :email, :placeholder => "Email", :autofocus => true %></div>

				  <div class="controls">
				  <%= f.password_field :password, :placeholder => "Password" %></div>

				  <% if devise_mapping.rememberable? -%>
				    <div class="controls"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
				  <% end -%>

				  <div type="submit" class="btn btn-inverse btn-block sign-in">Sign In</div>
				<% end %>
			</div>
			<div id="devise_links">
				<%= render "devise/shared/links" %>
			</div>
	</div>
</div>